{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Parking list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Owner</th>
                <th>State</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('parking_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.number }}</td>
                <td>{{ entity.owner }}</td>
                <td>{{ entity.state }}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('parking_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('parking_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('parking_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
