{% extends 'PrettyBundle:layout:layout.html.twig' %}

{% block title %}{% endblock title %}

{% block body_container %}
    <div id="main">
        <section class="container-wrap main-color">
            <div id="main-container" class="container-full">
                <!-- MAIN SECTION -->
                <h1>Mis Parkings</h1>

                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Número</th>
                        <th>Estado</th>
                        <th>Actualizado el</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('parking_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{{ entity.number }}</td>
                            <td>{{ entity.state }}</td>
                            <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('parking_show', { 'id': entity.id }) }}">Ver</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('parking_edit', { 'id': entity.id }) }}">Editar</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% else %}
                        No has creado ningún parking todavia
                    {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('parking_new') }}">
                    <button type="button" class="btn btn-primary">Crea una nueva plaza de aparcamiento</button>
                </a>
                <!-- END MAIN SECTION -->
            </div>
        </section>
    </div>
{% endblock %}