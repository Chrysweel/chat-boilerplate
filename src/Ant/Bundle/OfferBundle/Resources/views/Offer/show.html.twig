{% extends 'OfferBundle::layout.html.twig' %}

{% block main_section %}
    <h1>Offer</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ entity.slug }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Countvisits</th>
            <td>{{ entity.countVisits }}</td>
        </tr>
        <tr>
            <th>Owner</th>
            <td>{{ entity.owner }}</td>
        </tr>
        <tr>
            <th>Enabled</th>
            <td>{{ entity.enabled }}</td>
        </tr>
        <tr>
            <th>Publicatedat</th>
            <td>{{ entity.publicatedAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Isexpired</th>
            <td>{{ entity.isExpired }}</td>
        </tr>
        <tr>
            <th>expiredAt</th>
            <td>{{ entity.expiredAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Numusers</th>
            <td>{{ entity.numUsers }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('offer_my') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('offer_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}