{% extends 'PrettyBundle:Default:layout_full.html.twig' %}

{% block head_css %}
    {{ parent() }}
{% endblock %}

{% block body_container_content_full %}
    <div class="container" style="margin-bottom:5%">
        {% block body_container_center %}
            <div class="container">
                <br/>
                <br/>
                {# Hacemos estos chequeaos para poner listas de 4 elementos #}
                <div class="row">
                    <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 text-center">
                        <h1>Oferta</h1>
                        <div class="service-box">
                            {% if entity.image %} 
                                <img src="{{app_path_offer_images}}/{{ entity.image }}">
                            {% else %}
                                <i class="fa fa-4x fa-paper-plane wow bounceIn text-primary" style="visibility: visible; animation-name: bounceIn;"></i>
                            {% endif %}
                            <h3>{{ entity.name }}</h3>
                            <p class="text-muted">{{ entity.shortDescription }}</p>
                            <p class="text-muted">{{ entity.largeDescription }}</p>
                            <p>{% if entity.expiredAt is not null %}Expira el: {{ entity.expiredAt|date('Y-m-d H:i:s') }}{% else %} Esta oferta no tiene fecha límite.{% endif %}</p>
                            <p>Puedes <a href="{{ path('ant_user_user_show', { 'username' : 'anonimous' , 'user_id': entity.owner }) }}">ver aquí quien ha publicado</a> de esta oferta</p>
                        </div>
                    </div>
                </div>
        {% endblock body_container_center %}
    </div>
{% endblock body_container_content_full %}