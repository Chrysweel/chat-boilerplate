{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Offer list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Description</th>
                <th>Countvisits</th>
                <th>Owner</th>
                <th>Enabled</th>
                <th>Publicatedat</th>
                <th>Isexpired</th>
                <th>Numusers</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('offer_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.countVisits }}</td>
                <td>{{ entity.owner }}</td>
                <td>{{ entity.enabled }}</td>
                <td>{% if entity.publicatedAt %}{{ entity.publicatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.isExpired }}</td>
                <td>{{ entity.numUsers }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('offer_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('offer_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('offer_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
