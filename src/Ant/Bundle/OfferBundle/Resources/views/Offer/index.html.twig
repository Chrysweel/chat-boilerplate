{% extends 'PrettyBundle:Default:layout_full.html.twig' %}

{% block head_css %}
    {{ parent() }}
    {% stylesheets '@OfferBundle/Resources/public/css/custom.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    <style>
        .panel-default h4{
            font-weight: unset !important;
        }
    </style>
{% endblock %}

{% block body_container_content_full %}
    <div class="container" style="margin-bottom:5%">
        {% block body_container_center %}
            <div class="container">
                <br/>
                <br/>
                <br/>
                {% for entity in entities %}
                    {# Hacemos estos chequeos para poner listas de 4 elementos #}
                    {% if loop.first or loop.index % 4 == 1 %}
                        <div class="row">
                    {% endif %}
                        <div class="col-lg-3 col-md-6 text-center">
                            <div class="service-box">
                                {% if entity.image %} 
                                    <img src="{{app_path_offer_images}}/{{ entity.image }}" width="150px">
                                {% else %}
                                    <i class="fa fa-4x fa-paper-plane wow bounceIn text-primary" style="visibility: visible; animation-name: bounceIn;"></i>
                                {% endif %}
                                <a href="{{ path('offer_show', {id: entity.id}) }}"><h3>{{ entity.name }}</h3></a>
                                <p class="text-muted">{{ entity.description }}</p>
                            </div>
                        </div>
                    {% if loop.index % 4 == 0 or loop.last %}
                        </div>
                        <br/>
                        <br/>
                    {% endif %}
                {% endfor %}
            </div>
        {% endblock body_container_center %}
    </div>
    
    <div class="footer-contacta">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <div class="texto-wrapper"><strong>¿Quieres publicar una oferta? </strong> Nos encantará recibirla</div>
                    <div class="button-wrapper">
                        <a href="mailto:{{ email }}" class="btn_02 btn_medium" role="button"><i class="fa fa-envelope"></i> {{ email }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body_container_content_full %}
