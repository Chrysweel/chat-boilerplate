{% extends "::layout.html.twig" %}

{% block title %}
    {% block head_title %}{{ web_param.meta_title_base }}{% endblock %}
{% endblock %}

{% block head_css %}
    {{ parent() }}
    {% block chatea_css %}{% endblock chatea_css %}
{% endblock head_css %}

{% block body_pre_container %}{% endblock %}

{% block body_container_content %}
	{% block chatea_body %}
	{% endblock %}
{% endblock body_container_content %}


{% block body_js_end %}
	{{ parent() }}
    <script>
        window.homepage = "{{social_endpoint}}";
        window.api_endpoint = "{{api_endpoint}}";
        {% if app.user %}
            window.token = "{{ app.user.accessToken}}";
        {% endif %}
    </script>
	
    {% block chatea_js %}{% endblock %}
{% endblock %}