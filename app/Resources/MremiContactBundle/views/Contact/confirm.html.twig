{% extends "MremiContactBundle::layout.html.twig" %}

{% trans_default_domain 'MremiContactBundle' %}

{% block title %}{{ 'mremi_contact.confirm_page_title'|trans }}{% endblock %}

{% block main_section %}
    <div class="col-xs-12 col-md-6 col-md-offset-3">
        <br/>
        <h3>{{ 'mremi_contact.confirm_title'|trans({
                '%title%':    contact.titleValue|trans,
                '%fullName%': contact.fullName
            }) }}</h3>
        <p>{{ 'mremi_contact.confirm_message'|trans }}</p>
        <hr/>
    </div>
{% endblock main_section %}
